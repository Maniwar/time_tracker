{
  "manifest_version": 3,
  "name": "Universal Time Tracker - Google & Outlook",
  "version": "2.2.0",
  "description": "Track time with Google Calendar and Outlook meetings, multi-tasking support, auto-tracking, and Excel export.",
  "permissions": [
    "storage",
    "identity",
    "alarms"
  ],
  "host_permissions": [
    "https://www.googleapis.com/*",
    "https://graph.microsoft.com/*"
  ],
  "oauth2": {
    "client_id": "785918599575-g6q6rtfgadrgr48vmt93olqb034m6c46.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/calendar.readonly",
      "https://www.googleapis.com/auth/userinfo.email"
    ]
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "options_page": "options.html",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}