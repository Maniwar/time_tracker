{
  "manifest_version": 3,
  "name": "Outlook Time Tracker",
  "version": "1.0.0",
  "description": "Track time from Outlook meetings and log tasks with Excel export",
  "permissions": [
    "storage",
    "identity",
    "alarms"
  ],
  "host_permissions": [
    "https://graph.microsoft.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "options_page": "options.html",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}